{
  "version": 2,
  "builds": [
    {
      "src": "firstry/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.14.0"
      }
     },
      {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "staticfiles"
        }
      }
   ],
   "routes": [
     {
       "src": "/(.*)",
       "dest": "firstry/wsgi.py"
     },
     {
       "src": "/static/(.*)",
       "dest": "staticfiles/$1"
     }
   ]
}